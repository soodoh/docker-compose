    remote_ip 10.0.0.0/8
    remote_ip 172.16.0.0/12
    remote_ip 192.168.0.0/16
    remote_ip fc00::/7
  }

  reverse_proxy @internal karaoke-eternal:8080 {
    header_up X-Local-Network "true"
  }

  reverse_proxy authentik-server:9000 {
    header_up X-Local-Network "false"
  }
}
