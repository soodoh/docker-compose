{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "group:allNonMajor"
  ],
  "packageRules": [
    {
      "matchDepTypes": [
        "dependencies",
        "devDependencies"
      ],
      "rangeStrategy": "bump"
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "postgres"
      ],
      "enabled": false
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "/linuxserver/qbittorrent/"
      ],
      "allowedVersions": "/^5\\.[0-9]+\\.[0-9]+$/",
      "enabled": true
    }
  ],
  "docker-compose": {
    "managerFilePatterns": [
      "/\\-compose\\.ya?ml$/"
    ]
  }
}
