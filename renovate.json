{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "group:allNonMajor"
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "postgres"
      ],
      "enabled": false
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "linuxserver/qbittorrent"
      ],
      "allowedVersions": "!/^20\\./",
      "enabled": true
    }
  ],
  "docker-compose": {
    "managerFilePatterns": [
      "/\\-compose\\.ya?ml$/"
    ]
  }
}
